import java.util.Scanner;

public class Tester {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Scanner stdin = new Scanner (System.in);

		int total = 0,  input = 0;


		do
		{
			
		input = stdin.nextInt();
			if (input%2==0)
			{
				total += input;
			}
		}
		while (input >= 0);
		System.out.println(total);

	}

}
