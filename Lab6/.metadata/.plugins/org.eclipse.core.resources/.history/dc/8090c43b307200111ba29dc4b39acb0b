 * Balloons.java
 * Constructs Various Colored balloons w/ a string attached
 *
 */

import javax.swing.JApplet;
import java.awt.*;
import java.util.Random;

public class Balloons extends JApplet{
	
	public void paint (Graphics page){
	
	final int BSIZE = 40; //sets size of balloon	
	final int VERT_CENTER = 150; //sets beginning center line for balloon
	final int MAX_NUMBER = 10; //maximum used for random number of balloons
	
	setBackground (Color.cyan);
	
	Random randomInt = new Random();
	int randomNum = randomInt.nextInt(MAX_NUMBER) + 1;
	
		while (randomNum > 0){ //loop to draw balloons
			
			page.setColor(Color.BLUE);
			int vCenter = randomInt.nextInt(150);//finds random vertical location of the balloon
			int hCenter = randomInt.nextInt(150);//finds random horizontal location of the balloon
			page.fillOval(vCenter, hCenter, BSIZE, BSIZE);
			page.drawLine(vCenter,(hCenter - (BSIZE/2)),vCenter,(hCenter + (BSIZE/2) + 25)  );
			
			
			randomNum--;
		}//end of while loop

	}//end of paint
	
}//end of Balloons class
